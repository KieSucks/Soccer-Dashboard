<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playerInfo_cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    android:background="#FFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="10dp"
    app:cardElevation="1.5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/details_playername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="PLAYER NAME"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/details_playerpos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_playername"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="POSITION"
            android:textColor="#000"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/details_playernum"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/details_playername"
            android:gravity="center_vertical"
            android:text="22"
            android:textColor="#000"
            android:textSize="25dp"/>

        <ImageView
            android:layout_toRightOf="@id/details_playernum"
            android:id="@+id/details_playercard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/yellow_card"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/lloris"
            app:civ_border="true"
            app:civ_border_color="#E8E8E8"
            app:civ_border_width="2dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
